#popup-one-click.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
    form.modal-dialog.modal-dialog-centered
        .modal-content.popup-content
            .popup-header.modal-header.pb-0
                .popup-header--close__wrap
                    .popup-header--close(data-dismiss="modal")
                        +icon('close2')
                .popup-header--title Купить в 1 клик!
                .popup-header--desc Наш менеджер перезвонит Вам, чтобы уточнить заказ

            .popup-body.modal-body.p-40-70
                .popup-input--wrapper
                    label Контактное лицо:
                    input.popup-input(type="text")
                .popup-input--wrapper
                    label Телефон:
                    input.popup-input(type="tel" data-mask="+7 (000) 000 00 00")
                .popup-input--wrapper
                    label Адрес
                    input.popup-input(type="text")
                .popup-input--wrapper
                    label Комментарий к заказу:
                    textarea.popup-textarea(cols="5" rows="4")

            .popup-footer.modal-footer
                button.main-button.w-230.m-0-auto.mb-30(type="submit") Отправить

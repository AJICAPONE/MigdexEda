extends ../layout/main

block variables
    - var title = 'Карточка товара (Ланч)'
    - var pageClass = 'other-page card-header-fixed--added'

block content
    include ../modules/breadcrumbs
    include card-product/section1
    include card-product/section3
    include card-product/section-dop-lanch
    include card-product/section4
    include card-product/section6
    include card-product/section7

    .popups
        include ../popups/popup-added-basket
        include ../popups/popup-one-click
        include ../popups/popup-attention
        include ../popups/popup-complex
        include ../popups/popup-card-remove
    .popups-mobile
        include ../popups-mobile/popup-basket-added
        include ../popups-mobile/popup-one-click
        include ../popups-mobile/popup-attention
        include ../popups-mobile/popup-complex
        include ../popups-mobile/popup-card-update

block script
    script.
        $("#popup-attention").modal('show');
        var mobile_auto = function () {
            if ($(window).width() <= 768) {
                $(window).on('load', function () {
                    $('.card-header-fixed--added #custom-mobile-attention').addClass('active');
                    $('.card-header-fixed--added .content').addClass('mobile-popup-bg');
                    $('header').addClass('header-transform-hidden');
                    $('body').addClass('overflow-hidden');
                });
            }
        };
        mobile_auto();
        $(window).resize(mobile_auto);

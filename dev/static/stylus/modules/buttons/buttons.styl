.main-button
  display flex
  align-items center
  justify-content center
  font-family Ow600
  font-size 16px
  color #fff
  background: colorMain
  border 1px solid colorMain
  box-shadow: 0px 10px 15px -6px rgba(255, 101, 29, 0.3);
  border-radius: 25px;
  height 49px
  padding 20px
  width 100%
  cursor pointer
  transition all linear .2s
  &:hover
    background-color transparent
    color colorMain

.main-button-transparent
  display flex
  align-items center
  justify-content center
  position relative
  font-family Ow400
  font-size 14px
  color colorMain
  border 1px solid colorMain
  border-radius: 25px;
  height 35px
  padding 10px 35px
  width 100%
  cursor pointer
  transition all linear .2s
  &:hover
    background: colorMain
    color #fff
.button-basket--product
  z-index 2
.button-basket-active
  background-color colorMain
  padding 0
  size(35px)
  min-width 35px
  .icon
    size(19px)
    fill #fff
    pointer-events none
.review-button-tab
  display flex
  align-items center
  justify-content center
  position relative
  font-family Rb400
  font-size 16px
  color rgba(33,33,33,0.5)
  border-radius: 25px;
  background-color rgba(33,33,33,0.1)
  height 46px
  padding 10px 25px
  width 170px
  cursor pointer
  transition all linear .2s
  margin-right 30px
  &:last-child
    margin-right 0
.review-button-tab.active
  background-color colorMain
  box-shadow: 0px 10px 15px -6px rgba(255, 101, 29, 0.3);
  color #fff
  font-family Rb500
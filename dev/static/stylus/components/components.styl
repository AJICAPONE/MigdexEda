.popup-content
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(15px);
  border-radius: 15px;
  border none
.popup-header
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 30px
  border-bottom 0
.popup-header--close
  cursor pointer
  .icon
    size(20px)
    fill #fff
.popup-header--title
  font-family Rb700
  font-size 22px
  color #fff
  margin-bottom 5px
.popup-header--desc
  font-family Rb400
  font-size 14px
  color #fff
.mw-630
  max-width 630px
.popup-header--close__wrap
  display flex
  width 100%
  justify-content flex-end
  align-items center
.popup-body
  padding 15px 0
.popup-arrow-notific
  absolute-center()
  width 100%
  display flex
  justify-content space-between
  align-items center
  z-index 2
  pointer-events none
.popup-swiper-button-prev,.popup-swiper-button-next
  display flex
  justify-content center
  align-items center
  size(46px)
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(15px)
  border-radius: 8px
  outline none
  pointer-events auto
  transition all linear .2s
  .icon
    size(12px)
    fill #fff

.popup-swiper-button-prev
  margin-left -23px
.popup-swiper-button-next
  margin-right -23px
.popup-swiper-button-prev.swiper-button-disabled
  .icon
    fill rgba(33,33,33,0.6)
.popup-basket-notific
  .swiper-wrapper
    padding-top 25px
  .section-menu-content--col
    width 48%
    padding 0 15px
  .section-menu-content--name,.section-menu-content--desc,.section-menu-content--price
    color #fff
  .button-basket--product
    color #fff
    border 1px solid #fff
    &:hover
      color #212121
      background-color #fff
      .icon
        fill colorMain
  .basket-product--minus,.basket-product--plus,.basket-product--input
    color #fff

.p-40-70
  padding 40px 70px
.popup-input--wrapper
  display flex
  flex-direction column
  margin-bottom 30px
  &:last-child
    margin-bottom 0
  label
    font-family Rb400
    font-size 12px
    color #fff
  input
    background-color rgba(255,255,255,0.3)
    border-radius 5px
    padding 15px 10px
    height 47px
    border none
    color #fff
    font-family Ow500
    font-size 14px
    &::placeholder
      color rgba(255,255,255,0.5)
.popup-textarea
  background-color rgba(255,255,255,0.3)
  border-radius 5px
  padding 15px 10px
  border none
  color #fff
  font-family Ow500
  font-size 14px
  &::placeholder
    color rgba(255,255,255,0.5)
.popup-not-reg
  font-family Rb400
  font-size 15px
  color #fff
  margin-bottom 20px
  span
    font-family Rb700
    font-size 15px
    color colorMain
    cursor pointer
    margin-left 4px
.popup-footer
  display flex
  flex-direction column
  align-items center
  border-top none
.popup-header--title--v2
  font-family Ow700
  font-size 38px
  color #fff
  text-align center
  margin-bottom 20px
.popup-header--desc--v2
  font-family Rb400
  font-size 15px
  color #fff
  text-align center
  margin-bottom 15px
.popup-svg-icon
  .icon
    size(200px)


